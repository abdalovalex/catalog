{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
{{ form_row(form._token) }}

<div class="form-group {% if (form_errors(form.fio)) %}has-error{% endif %}">
    {{ form_label(form.fio, '', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
    <div class="col-md-10">{{ form_widget(form.fio, {'attr': {'class': 'form-control'}}) }}</div>
    {% if (form_errors(form.fio)) %}
        <div class="col-md-offset-2 col-md-10 error-message">{{ form_errors(form.fio) }}</div>
    {% endif %}
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">{{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}</div>
</div>